<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purchase_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/purchaseAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/purchaseToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/purchase_toolbar_height"
                app:menu="@menu/menu_purchase"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_chevron_left_vector"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/top_details"
        layout="@layout/top_view_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="dev.widebars.commons.helpers.PurchaseTopBehavior"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/purchase_nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/purchaseAppBarLayout"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/purchase_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/normal_margin">

            <dev.widebars.commons.views.MyTextView
                android:id="@+id/purchase_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/medium_margin"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/pref_pay_summary"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/pay_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/purchase_apps"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/app_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginHorizontal="@dimen/bigger_margin"
                    android:background="@drawable/button_white_bg"
                    android:elevation="4dp"
                    android:padding="@dimen/medium_margin"
                    android:orientation="horizontal"
                    android:weightSum="4.4">

                    <TextView
                        android:id="@+id/app_one_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/one_time_purchase"
                        android:textColor="@color/theme_light_text_color"
                        android:textSize="12sp"
                        android:layout_weight="1.4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_one_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:alpha="0.6"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_two_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:alpha="0.7"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_three_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:alpha="0.8"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bigger_margin"
                    android:layout_marginHorizontal="@dimen/bigger_margin"
                    android:background="@drawable/button_white_bg"
                    android:elevation="4dp"
                    android:padding="@dimen/medium_margin"
                    android:orientation="horizontal"
                    android:weightSum="4.4">

                    <TextView
                        android:id="@+id/app_two_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/monthly"
                        android:textColor="@color/theme_light_text_color"
                        android:textSize="12sp"
                        android:layout_weight="1.4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_one_sub_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:alpha="0.6"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_two_sub_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:alpha="0.7"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_three_sub_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:alpha="0.8"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bigger_margin"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginHorizontal="@dimen/bigger_margin"
                    android:background="@drawable/button_white_bg"
                    android:elevation="4dp"
                    android:padding="@dimen/medium_margin"
                    android:orientation="horizontal"
                    android:weightSum="4.4">

                    <TextView
                        android:id="@+id/app_three_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/yearly"
                        android:textColor="@color/theme_light_text_color"
                        android:textSize="12sp"
                        android:layout_weight="1.4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_one_sub_year_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:alpha="0.6"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_two_sub_year_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/medium_margin"
                        android:alpha="0.7"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/app_three_sub_year_button"
                        style="@style/AppTheme.Button.Chip"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:alpha="0.8"
                        android:background="@drawable/button_gray_bg_8dp"
                        android:enabled="false"
                        android:maxLines="2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="..."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>
            </LinearLayout>

            <dev.widebars.commons.views.MyTextView
                android:id="@+id/purchase_apps_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pay_app"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/plus_summary"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/widebars_logo"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_below="@+id/purchase_apps_summary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_widebars"
                android:contentDescription="@string/my_website" />

            <dev.widebars.commons.views.MyTextView
                android:id="@+id/widebars_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/widebars_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="48dp"
                android:text="widebars.dev"
                android:textSize="13sp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
